<Window x:Class="mainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="NamePlace" Grid.Column = "0" SelectionMode="Single" Margin="10 10 0 10">
        </ListBox>
        <ListBox Name="PathPlace" Grid.Column = "1" IsEnabled="False" Margin="0 10 10 10">
        </ListBox>
        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <Button  Name="exeButton" Click="ExeButton" Width="100" Height="30" Margin="10">실행</Button>
            <Button  Name="saveButton" Click="SaveButton" Width="100" Height="30" Margin="10">저장</Button>
            <Button  Name="addButton" Click="AddButton" Width="100" Height="30" Margin="10">추가</Button>
            <Button  Name="delButton" Click="DelButton" Width="100" Height="30" Margin="10">삭제</Button>
        </StackPanel>
    </Grid>
</Window>